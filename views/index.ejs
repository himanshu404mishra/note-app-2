<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Create Task</title>
        <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
        <link
    href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css"
    rel="stylesheet"
/>
    </head>
    <body>
        <div class="main w-full min-h-screen bg-zinc-900 text-white">
            <div class="form p-10 text-white">
                <form action="/create" method="post">
                    <input
                        class="block w-full rounded-lg outline-none px-5 py-2 bg-zinc-800"
                        type="text"
                        placeholder="Title goes here"
                        name="title"
                        required
                    />
                    <textarea
                        class="mt-2 block w-full rounded-lg outline-none px-5 py-2 resize-none bg-zinc-800"
                        name="task"
                        id="task"
                        placeholder="Write your task details here"
                    ></textarea>
                    <input
                        class="mt-2 bg-blue-600 px-5 py-3 rounded-md cursor-pointer"
                        type="submit"
                        value="Create Task"
                    />
                </form>
            </div>
            <div class="tasks p-10 flex gap-3 flex-wrap">
                <% if(files.length>0){ files.forEach(function(val){ %>
                <div class="task min-w-72 px-3 py-4 bg-zinc-800 rounded-md relative">
                    <a href="/delete/<%=val%>">
                        <i class="ri-delete-bin-2-line absolute top-2 right-3 text-red-400 text-xl cursor-pointer hover:text-red-600 transition active:scale-110" ></i>
                    </a>
                    <h1 class="text-white text-3xl tracking-tighter">
                        <%= val %>
                    </h1>
                    <div class="flex w-full justify-between items-center">
                        <a
                        class="text-blue-500 inline-block mt-3"
                        href="/file/<%= val %>"
                        >Read more...</a
                    >
                    <a
                        class="text-zinc-500 inline-block mt-3"
                        href="/edit/<%= val %>"
                        >Edit File Name...</a
                    >
                    </div>
                </div>
                <% }) } else { %>
                <h3 class="text-zinc-400">*No tasks yet...</h3>

                <% } %>
            </div>
        </div>
    </body>
</html>
